<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".module.profile.ProfileFragment">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView android:layout_width="240dp"
                   android:layout_height="240dp"
                   android:layout_marginTop="40dp"
                   android:id="@+id/avatarImageView"
                   android:src="@drawable/github_logo"
                   android:contentDescription="@null"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintVertical_bias="0.2"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="40dp"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/nameTextView"
                  android:textSize="20sp"
                  app:layout_constraintTop_toBottomOf="@id/avatarImageView"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:text="Douglas Queiroz"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/emailTextView"
                  android:textSize="20sp"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/nameTextView"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:text="douglasq16@gmail.com"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/locationTextView"
                  android:textSize="20sp"
                  android:textAlignment="center"
                  app:layout_constraintTop_toBottomOf="@id/emailTextView"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:text="Newark - NJ"/>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/logoutButton"
                android:text="@string/profile_module_logout_button_title"
                app:layout_constraintTop_toBottomOf="@id/locationTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>